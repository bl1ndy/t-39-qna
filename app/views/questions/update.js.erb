$('.question-errors').html('<%= render 'shared/errors', object: @question %>')

<% if @question.errors.empty? %>
  $('.question-title').html('<%= @question.title %>')
  $('.question-body').html('<%= @question.body %>')

  $('.question-files').html('<%= j render partial: 'file', collection: @question.files %>')

  $('.edit-question-form').addClass('hidden')
  $('.edit-question-link').show()
<% end %>
