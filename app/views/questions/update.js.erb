$('.question-errors').html('<%= render 'shared/errors', object: @question %>')

<% if @question.errors.empty? %>
  $('.question-title').html('<%= @question.title %>')
  $('.question-body').html('<%= @question.body %>')

  <% if @question.files.attached? %>
    $('.question-files-card').removeClass('hidden')
    $('.question-files').html('<%= j render partial: 'file', collection: @question.files %>')
  <% end %>

  <% if @question.links.any? %>
    $('.question-links-card').removeClass('hidden')
    $('.question-links').html('<%= j render partial: 'link', collection: @question.links %>')
  <% end %>

  $('.edit-question-form').html('<%= j render 'edit_form' %>').addClass('hidden')
  $('.edit-question-link').show()
<% end %>
